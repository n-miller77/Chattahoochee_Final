# ======================================================
# ADD LETTER LABELS (INSIDE PLOT)
# ======================================================

add_label <- function(plot, label) {
  arrangeGrob(
    plot +
      annotation_custom(
        grob = textGrob(label, x = unit(0.02, "npc"), y = unit(0.95, "npc"),
                        just = "left",
                        gp = gpar(fontsize = 18, fontface = "bold"))
      )
  )
}

plots_labeled <- list(
  add_label(pA, "A"),
  add_label(pB, "B"),
  add_label(pC, "C"),
  add_label(pD, "D"),
  add_label(pE, "E"),
  add_label(pF, "F")
)

# ======================================================
# COMBINE
# ======================================================
final_plot <- grid.arrange(grobs = plots_labeled, ncol = 1)

# SAVE
ggsave("All_Riverine_Plots2.png",
       final_plot, width = 15, height = 30, dpi = 300)


















library(ggplot2)
library(gridExtra)
library(grid)

# Shared X-axis
x_vals <- c(0, 72.4, 77.72, 87.04, 101.26, 107.42, 126.09, 144.58, 161.29)

# ======================================================
# FUNCTION TO MAKE ONE PLOT (with border and styling)
# ======================================================
make_plot <- function(x_vals, y1, y2, y3, x_label, y_label, plot_title) {

  df <- data.frame(
    x = rep(x_vals, 3),
    y = c(y1, y2, y3),
    series = factor(rep(c("Period 1", "Period 2", "Period 3"),
                        each = length(x_vals)))
  )

  p <- ggplot(df, aes(x = x, y = y, color = series)) +
    geom_line(size = 1) +
    geom_point(size = 3) +
    labs(
      title = plot_title,
      x = x_label,
      y = y_label,
      color = "Legend"
    ) +
    theme_minimal(base_size = 15) +
    theme(
      plot.title = element_text(hjust = 0.5),
      axis.title.x = element_text(size = 10),
      axis.title.y = element_text(size = 10),

      # backgrounds
      panel.background = element_rect(fill = "white", color = NA),
      legend.background = element_rect(fill = "white", color = NA),

      # full-figure border
      plot.background = element_rect(fill = "white",
                                     color = "black",
                                     size = 0.8),

      # even spacing for border symmetry
      plot.margin = margin(8, 8, 8, 8),

      # remove extra grid spacing
      panel.grid = element_blank()
    )

  return(p)
}

