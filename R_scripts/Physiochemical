library(ggplot2)
library(gridExtra)
library(grid)

# Shared X-axis
x_vals <- c(0, 72.4, 77.72, 87.04, 101.26, 107.42, 126.09, 144.58, 161.29)

# ======================================================
# FUNCTION TO MAKE ONE CONSISTENT PLOT
# ======================================================
make_plot <- function(x_vals, y1, y2, y3, x_label, y_label, plot_title) {

  df <- data.frame(
    x = rep(x_vals, 3),
    y = c(y1, y2, y3),
    series = factor(rep(c("Period 1", "Period 2", "Period 3"),
                        each = length(x_vals)))
  )

  p <- ggplot(df, aes(x = x, y = y, color = series)) +
    geom_line(size = 1) +
    geom_point(size = 3) +
    labs(
      title = plot_title,
      x = x_label,
      y = y_label,
      color = "Legend"
    ) +
    theme_minimal(base_size = 15) +
    theme(
      plot.title = element_text(hjust = 0.5),

      axis.title.x = element_text(size = 10),
      axis.title.y = element_text(size = 10),

      # ---- GRIDLINES (RESTORED) ----
      panel.grid.major = element_line(color = "grey85", size = 0.3),
      panel.grid.minor = element_line(color = "grey92", size = 0.2),

      # ---- BACKGROUNDS ----
      panel.background = element_rect(fill = "white", color = NA),
      legend.background = element_rect(fill = "white", color = NA),

      # ---- BORDER AROUND ENTIRE PLOT ----
      plot.background = element_rect(fill = "white",
                                     color = "black",
                                     size = 0.8),

      # even spacing around border
      plot.margin = margin(12, 12, 12, 12)
    )

  return(p)
}

# ======================================================
# PLOTS A–F
# ======================================================

# ---- A ----
y1_A <- c(0.290138369, 0.722574598, 0.587246996, 0.781274009, 0.787295307,
          0.692225067, 0.630731007, 0.652461885, 0.660326663)
