plots_labeled <- mapply(
  function(p, letter) arrangeGrob(
    p,
    top = textGrob(letter, x = unit(-0.03, "npc"),
                   y = 0.9, just = "left",
                   gp = gpar(fontsize = 16, fontface = "bold"))
  ),
  list(pA, pB, pC, pD, pE, pF),
  c("A", "B", "C", "D", "E", "F"),
  SIMPLIFY = FALSE
)

final_plot <- grid.arrange(grobs = plots_labeled, ncol = 1)

# SAVE FIGURE
ggsave("All_Riverine_Plots.png",
       final_plot, width = 15, height = 30, dpi = 300)







library(ggplot2)
library(gridExtra)   # for arranging plots
library(grid)        # for annotation (A, B, C… labels)

# ---------------------------------------------------------
# FUNCTION TO MAKE A SINGLE PLOT
# ---------------------------------------------------------
make_plot <- function(x_vals, y1, y2, y3, xlab, ylab, main_title) {

  df <- data.frame(
    x = rep(x_vals, 3),
    y = c(y1, y2, y3),
    series = factor(rep(c("Period 1", "Period 2", "Period 3"),
                        each = length(x_vals)))
  )

  p <- ggplot(df, aes(x = x, y = y, color = series)) +
    geom_line(size = 1) +
    geom_point(size = 3) +
    labs(title = main_title, x = xlab, y = ylab, color = "Legend") +
    theme(
      plot.title = element_text(hjust = 0.5, size = 15),
      axis.title.x = element_text(size = 10),
      axis.title.y = element_text(size = 10),

      # white backgrounds
      panel.background = element_rect(fill = "white", color = NA),
      legend.background = element_rect(fill = "white", color = NA),

      # EVEN BORDER AROUND ENTIRE FIGURE
      plot.background = element_rect(fill = "white", color = "black", size = 0.8),

      # uniform margin so border looks even
      plot.margin = margin(8, 8, 8, 8),

      # remove any extra spacing
      panel.grid = element_blank()
    )

  return(p)
}

# ---------------------------------------------------------
# SHARED X VALUES
# ---------------------------------------------------------
x_vals <- c(0, 72.4, 77.72, 87.04, 101.26, 107.42, 126.09, 144.58, 161.29)

# ---------------------------------------------------------
# ENTER YOUR SIX Y-VALUE SETS AND LABELS HERE
# ---------------------------------------------------------

plots_data <- list(

  # A – DO Saturation
  list(y1=c(...), y2=c(...), y3=c(...),
       ylab="DO Saturation (%)", title="Riverine DO Saturation"),

  # B – Temperature
  list(y1=c(...), y2=c(...), y3=c(...),
       ylab="Temperature (°C)", title="Riverine Temperature"),

  # C – Conductivity
y1 <- c(0.07, 0.068, 0.124, 0.086, 0.087, 0.088, 0.064, 0.06, 0.057)
y2 <- c(0.075, 0.079, 0.111, 0.098, 0.113, 0.116, 0.141, 0.127, 0.098)
y3 <- c(0.083, 0.088, 0.151, 0.11, 0.133, 0.133, 0.101, 0.089, 0.098)

# Labels & Titles
x_label <- "Riverine Distance From Dam (km)"
y_label <- "Conductivity (uS/cm)"
plot_title <- "Riverine Conductivity"
  list(y1=c(...), y2=c(...), y3=c(...),
       ylab="Conductivity (mS/cm)", title="Riverine Conductivity"),

  # D – Nitrate
  list(y1=c(...), y2=c(...), y3=c(...),
       ylab="Nitrate (mg-N/L)", title="Riverine Nitrate"),

  # E – Turbidity
  list(y1=c(...), y2=c(...), y3=c(...),
       ylab="Turbidity (NTU)", title="Riverine Turbidity"),

  # F – TOC (your example)
  list(y1=c(1.4,4.9,8.8,4.5,5.8,5,9.3,8.6,8),
       y2=c(2.9,2,2.7,2.2,3.6,3.4,5.5,5.1,3.8),
       y3=c(3.1,2.5,2.5,4.5,3.6,1.9,0.9,1.9,1.6),
       ylab="Total Organic Carbon (mg/L)",
       title="Riverine Total Organic Carbon")
)

# ---------------------------------------------------------
# GENERATE PLOTS + LETTER LABELS
# ---------------------------------------------------------
letters <- c("A", "B", "C", "D", "E", "F")

plots <- lapply(1:6, function(i) {
  data <- plots_data[[i]]
  p <- make_plot(x_vals,
                 data$y1, data$y2, data$y3,
                 "Riverine Distance From Dam (km)",
                 data$ylab,
                 data$title)

  # Add letter annotation
  p <- arrangeGrob(p, top = textGrob(letters[i],
                                     x=unit(-0.03,"npc"), y=0.9,
                                     just="left", gp=gpar(fontsize=16,fontface="bold")))
  return(p)
})

# ---------------------------------------------------------
# ARRANGE INTO A SINGLE VERTICAL FIGURE
# ---------------------------------------------------------
final_plot <- grid.arrange(grobs = plots, ncol = 1)

# ---------------------------------------------------------
# SAVE COMBINED FIGURE
# ---------------------------------------------------------
ggsave("All_Riverine_Plots.png",
       final_plot, width = 15, height = 30, dpi = 300)


















# Install if needed
# install.packages("ggplot2")

library(ggplot2)

# ---- INPUT YOUR DATA HERE ----

# X-axis values (shared across all three lines)
x_vals <- c(0, 72.4, 77.72, 87.04, 101.26, 107.42, 126.09, 144.58, 161.29)

# Three data series
y1 <- c(0.07, 0.068, 0.124, 0.086, 0.087, 0.088, 0.064, 0.06, 0.057)
y2 <- c(0.075, 0.079, 0.111, 0.098, 0.113, 0.116, 0.141, 0.127, 0.098)
y3 <- c(0.083, 0.088, 0.151, 0.11, 0.133, 0.133, 0.101, 0.089, 0.098)

# Labels & Titles
x_label <- "Riverine Distance From Dam (km)"
y_label <- "Conductivity (uS/cm)"
plot_title <- "Riverine Conductivity"

# ---- PREP DATA ----

df <- data.frame(
  x = rep(x_vals, 3),
  y = c(y1, y2, y3),
  series = factor(rep(c("Period 1", "Period 2", "Period 3"),
                      each = length(x_vals)))
)

# ---- PLOT ----

p <- ggplot(df, aes(x = x, y = y, color = series)) +
  geom_line(size = 1) +
  geom_point(size = 3) +
  labs(
    title = plot_title,
    x = x_label,
    y = y_label,
    color = "Legend"
  ) +
  theme_minimal(base_size = 15) +
  theme(
    plot.title = element_text(hjust = 0.5)   # center title
    axis.title.x = element_text(size = 10),   # adjust size here
    axis.title.y = element_text(size = 10)    # adjust size here
  )


# ---- SAVE TO FILE ----
ggsave("Conductivity.png", plot = p, width = 20, height = 5, dpi = 300)




